<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.Bussin.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>   
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/samiyataiba/greet</url-pattern>
  </servlet-mapping>
  	
  	<context-param>
    	<param-name>docFold</param-name>
    	<param-value>D:\images</param-value>
	</context-param>

  <servlet>
	<servlet-name>upload</servlet-name>
	<servlet-class>com.Bussin.server.upload</servlet-class>
  </servlet>

   <servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>/samiyataiba/upload</url-pattern>
  </servlet-mapping>
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SamiyaTaiba.html</welcome-file>
  </welcome-file-list>

</web-app>
